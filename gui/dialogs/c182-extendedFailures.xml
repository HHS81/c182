<?xml version="1.0"?>

<PropertyList>

  <name>extended-failure-dialog</name>
  <modal>false</modal>
  <layout>vbox</layout>
  
  <nasal>
    <open>
      <![CDATA[
        # set some defaults for the gui
        var props = [
            ["/sim/failure-manager/surprise-mode/ammount", 1],
            ["/sim/failure-manager/surprise-mode/maxtime", 30],
            ["/sim/failure-manager/surprise-mode/timer",  30],
        ];
        foreach (cfg; props) {
            if (!getprop(cfg[0])) setprop(cfg[0], cfg[1]);
        }
      ]]>
    </open>
  </nasal>


  <group>
    <layout>hbox</layout>
    <empty><stretch>1</stretch></empty>

    <text>
      <label>System Failures</label>
    </text>

    <empty><stretch>1</stretch></empty>

    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule/>

  <text>
    <halign>left</halign>
    <label>  Uncheck a system to immediately fail it, or set the Mean Time/Cycles Between Failures.  </label>
  </text>
  <text>
    <halign>left</halign>
    <label>  Set to 0 to disable/unarm an activated MTBF/MCBF failure.  </label>
  </text>

  <hrule/>

  <group>
    <layout>hbox</layout>
    <halign>left</halign>

    <group>
      <layout>table</layout>
      <halign>center</halign>
      <valign>top</valign>

      <text>
        <row>0</row>
        <col>0</col>
        <label>System</label>
      </text>

      <text>
        <row>0</row>
        <col>2</col>
        <label>MTBF (sec)</label>
      </text>
      
     
      <text>
        <row>1</row>
        <col>0</col>
        <halign>right</halign>
        <label>Davtron 803 clock</label>
      </text>
      <checkbox>
        <row>1</row>
        <col>1</col>
        <property>/sim/failure-manager/instrumentation/clock/serviceable</property>
      </checkbox>
      <input>
        <row>1</row>
        <col>2</col>
        <property>/sim/failure-manager/instrumentation/clock/mtbf</property>
      </input>
      
      <text>
        <row>2</row>
        <col>0</col>
        <halign>right</halign>
        <label>Engine fuel pump</label>
      </text>
      <checkbox>
        <row>2</row>
        <col>1</col>
        <property>/sim/failure-manager/systems/fuel/engine-fuel-pump/serviceable</property>
      </checkbox>
      <input>
        <row>2</row>
        <col>2</col>
        <property>/sim/failure-manager/systems/fuel/engine-fuel-pump/mtbf</property>
      </input>
      
      <text>
        <row>3</row>
        <col>0</col>
        <halign>right</halign>
        <label>Aux fuel pump</label>
      </text>
      <checkbox>
        <row>3</row>
        <col>1</col>
        <property>/sim/failure-manager/systems/fuel/aux-fuel-pump/serviceable</property>
      </checkbox>
      <input>
        <row>3</row>
        <col>2</col>
        <property>/sim/failure-manager/systems/fuel/aux-fuel-pump/mtbf</property>
      </input>

      <!--
      <text>
        <row>ADJUST</row>
        <col>0</col>
        <halign>right</halign>
        <label>Foo bar</label>
      </text>
      <checkbox>
        <row>ADJUST</row>
        <col>1</col>
        <property>/sim/failure-manager/systems/static/serviceable</property>
      </checkbox>
      <input>
        <row>ADJUST</row>
        <col>2</col>
        <property>/sim/failure-manager/systems/static/mtbf</property>
      </input>
      -->


    </group>

    <vrule/>

    <group>
      <layout>table</layout>
      <halign>center</halign>
      <valign>top</valign>

      <text>
        <row>0</row>
        <col>0</col>
        <label>System</label>
      </text>

      <text>
        <row>0</row>
        <col>2</col>
        <label>MCBF</label>
      </text>

      <!--
      <text>
        <row>1</row>
        <col>0</col>
        <halign>right</halign>
        <label>MCBF test</label>
      </text>
      <checkbox>
        <row>1</row>
        <col>1</col>
        <property>/sim/failure-manager/controls/gear/serviceable</property>
      </checkbox>
      <input>
        <row>1</row>
        <col>2</col>
        <property>/sim/failure-manager/controls/gear/mcbf</property>
      </input>
      -->
   
    </group>

  </group>

  <hrule/>

  
  <!-- input for surprise mode -->
  <text>
    <halign>left</halign>
    <label>Initialize some random failures for a challenge!</label>
  </text>
  
  <group>
    <layout>hbox</layout>

    <text>
        <label>A)  Trigger</label>
        <halign>left</halign>
    </text>

    <input>
        <name>c182-customfailures-randomsurprise-ammount</name>
        <halign>left</halign>
        <property>/sim/failure-manager/surprise-mode/ammount</property>
        <type>INT</type>
        <width>100</width>
        <live>true</live>
        <binding>
            <command>dialog-apply</command>
            <name>c182-customfailures-randomsurprise-ammount</name>
        </binding>
    </input>
    
    <text>
        <label>random failures in </label>
        <halign>left</halign>
    </text>
    
    <input>
        <name>c182-customfailures-randomsurprise-maxtime</name>
        <halign>left</halign>
        <property>/sim/failure-manager/surprise-mode/maxtime</property>
        <type>INT</type>
        <width>100</width>
        <live>true</live>
        <binding>
            <command>dialog-apply</command>
            <name>c182-customfailures-randomsurprise-maxtime</name>
        </binding>
    </input>
    
    <text>
        <label>maximal minutes</label>
        <halign>left</halign>
    </text>
    
    <button>
      <legend>Surprise me!</legend>
      <equal>true</equal>
      <enable>
        <and>
            <less-than>
                <property>/sim/failure-manager/surprise-mode/button-locked</property>
                <value>0.01</value>
            </less-than>
            <greater-than>
                <property>/sim/failure-manager/surprise-mode/ammount</property>
                <value>0</value>
            </greater-than>
        </and>
      </enable>
      <binding>
        <command>nasal</command>
        <script>
            failures.initRandomFailures();
            setprop("/sim/failure-manager/surprise-mode/button-locked",1);
            interpolate("/sim/failure-manager/surprise-mode/button-locked", 0, 3);
        </script>
      </binding>
    </button>
  </group>  
  
  <group>
    <layout>hbox</layout>

    <text>
        <label>B)  Trigger one random failure about every </label>
        <halign>left</halign>
    </text>

    <input>
        <name>c182-customfailures-randomsurprise-timer</name>
        <halign>left</halign>
        <property>/sim/failure-manager/surprise-mode/timer</property>
        <type>INT</type>
        <width>100</width>
        <live>true</live>
        <binding>
            <command>dialog-apply</command>
            <name>c182-customfailures-randomsurprise-timer</name>
        </binding>
    </input>
    
    <text>
        <label>minutes</label>
        <halign>left</halign>
    </text>
    
    <button>
      <legend>Start</legend>
      <equal>true</equal>
      <enable>
        <and>
            <not><property>/sim/failure-manager/surprise-mode/timer-active</property></not>
            <greater-than>
                <property>/sim/failure-manager/surprise-mode/timer</property>
                <value>0</value>
            </greater-than>
        </and>
      </enable>
      <binding>
        <command>nasal</command>
        <script>failures.initRandomFailureTimer();</script>
      </binding>
    </button>
    
    <button>
      <legend>Stop</legend>
      <equal>true</equal>
      <enable>
        <and>
            <property>/sim/failure-manager/surprise-mode/timer-active</property>
        </and>
      </enable>
      <binding>
        <command>nasal</command>
        <script>failures.initRandomFailureTimer();</script>
      </binding>
    </button>
  </group>

  
  <!-- Final buttons -->
  <hrule/>

  <group>
    <layout>hbox</layout>
    <default-padding>7</default-padding>

    <button>
      <legend>OK</legend>
      <default>true</default>
      <equal>true</equal>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Apply</legend>
      <equal>true</equal>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>

    <button>
      <legend>Refresh</legend>
      <equal>true</equal>
      <binding>
        <command>dialog-update</command>
      </binding>
    </button>

    <button>
      <legend>Cancel</legend>
      <equal>true</equal>
      <key>Esc</key>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

  </group>

</PropertyList>
